@import 'nib'

myGreen = rgba(58, 219, 118, 1.0)
myRed = rgba(236, 88, 64, 1.0)
myBlue = rgba(33, 153, 232, 1.0)
myOrange = rgba(255, 152, 0, 1.0)

codePurple = rgb(178, 95, 178)
codeBlue = rgb(80, 125, 196)
codeOrange = rgb(255, 167, 0)

body, h3, h4, h5, p, a
   font-family 'Helvetica'
   font-weight 300
h1, h2
   font-family 'Helvetica'
   font-weight 100
   font-size 60px

.codeBlue
   color codeBlue
.codePurple
   color codePurple
.codeOrange
   color codeOrange

.window-height
   overflow hidden
.fade-animation
   height 100%
   width 100%
   position relative
.typed-cursor 
   animation blink 1s ease-out infinite
.banner-section 
   background-color #000000
   background-image url(../img/macbook.jpg)
   background-size cover
   background-position top
   width 100%
   z-index 1
   color white
   position relative
   .typed-span
      font-size 70px
      color white
   .fade-animation
      background-color rgba(0,0,0,0.85)
      position relative
   img:first-child
      position absolute
      top 30px
      left 20px
      width 150px
      height auto
   .typed-area
      padding-top 200px
      height 500px
      h1
         color #bbbbbb

.design-section
   background-image url(../img/sunset-bridge.jpg)
   background-size cover
   background-position top
   background-color #FFFFFF
   color white
   position relative
   .fade-animation
      background-color rgba(0, 0, 0, 0.7)
   h2
      margin-top 30px
   h4
      margin-top 30px
      margin-bottom 30px
   .animate3d
      position relative
      width 80%
      margin-left 10%
      padding-bottom 80%
      background-color rgba(255, 255, 255, 0.7)
      border-radius 50%
      margin-bottom 50px
      .layer
         position absolute
         top 10%
         width 60%
         height 81%
         left 20%
         background-color rgba(0,0,0,0.5)
      .layer-1
         position absolute
         top 10%
         left 10%
         width 80%
         height 80%
         background-color rgba(0,0,0,0.5)
      .layer-2
         position absolute
         top 20%
         left 15%
         width 70%
         height 70%
         overflow hidden
         text-align left
   .discover-img
      position absolute
      top 12.5%
      left 12.5%
      width 75%
   .design-img
      position absolute
      top 9%
      left 20%
      width 60%
         
.services-section
   background-image url(../img/ocean-shores.jpg)
   background-size cover
   background-position top
   background-color #000000
   .fade-animation
      background-color rgba(255,255,255, 0.85)
   h2
      margin 30px 0 0 0
   h4
      margin-top 50px
   img 
      height 250px
      margin 30px 0 30px 0
.contact-section
   background-image url(../img/waves.jpg)
   background-size cover
   background-position center
   color white
   position relative
   .columns
      background-color rgba(0, 0, 0, 0.5)
      margin-top 50px
      margin-bottom 50px
   h2
      padding 50px 0 50px 0
   label
      color white
   input
      font-size 14px
   input, textarea
      background-color rgba(255,255,255, 0.5)
      color white
      &:focus
         color black
         border 1px solid black
         outline none
         box-shadow none
         background-color rgba(255,255,255, 0.8)
   .submit
      text-align right
      padding-bottom 15px
   button
      padding 12px
      background-color alpha(myBlue, 0.8)
      transition .15s
      &:hover 
         background-color darken(alpha(myBlue, 0.8), 20%)
//animations

@keyframes blink 
   0% 
      opacity 1
   100% 
      opacity .5
      
// 930 and under
@media screen and (max-width: 930px)
   pre 
      font-size 10px
   .contact-section
      h2
         padding-bottom 30px
// 640 and under
@media screen and (max-width: 640px)
   h1,h2
      font-size 40px
   h4
      font-size 30px
   pre 
      font-size 14px
   .banner-section
      .typed-span
         font-size 50px
   .contact-section
      h2
         padding-bottom 25px

