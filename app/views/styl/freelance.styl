@import 'nib'

myGreen = rgba(58, 219, 118, 1.0)
myRed = rgba(236, 88, 64, 1.0)
myBlue = rgba(33, 153, 232, 1.0)
myOrange = rgba(255, 152, 0, 1.0)

codePurple = rgb(178, 95, 178)
codeBlue = rgb(80, 125, 196)
codeOrange = rgb(255, 167, 0)

playkleenBlue = #006fba
playkleenGrey = #878a8f

body, h3, h4, h5, p, a
   font-family 'Helvetica'
   font-weight 300
h1, h2
   font-family 'Helvetica'
   font-weight 100
   font-size 60px
.codeBlue
   color codeBlue
.codePurple
   color codePurple
.codeOrange
   color codeOrange
/*---------OFF CANVAS MENU---------*/ 
.off-canvas
   padding-bottom 30px
   .vertical
      margin-top 50px
      text-align center
      .sub-sites
         padding-left 10%
         padding-right 10%
         text-align center
         font-size 14px
      li 
         transition .15s
      li:hover 
         background-color darken(#e6e6e6, 20%)
   #loginForm
      margin 10px
   
   
.window-height
   overflow hidden
.fade-animation
   height 100%
   width 100%
   position relative
.typed-cursor 
   animation blink 1s ease-out infinite
.banner-section 
   background-color #000000
   background-image url(../img/freelance/macbook.jpg)
   background-size cover
   background-position top
   width 100%
   z-index 1
   color white
   position relative
   .typed-span
      font-size 70px
      color white
   .fade-animation
      background-color rgba(0,0,0,0.85)
      position relative
   img:first-child
      position absolute
      top 20px
      left 20px
      width 150px
      height auto
   .menu-container
      position absolute
      top 20px
      right 20px
      p 
         display inline
   .menu-icon-wrapper
      padding 5px 5px 0px 5px
      border 1px solid white
      display inline-block
   .menu-icon
      color white
      width 25px
      height 22px 
   .typed-area
      height 200px
      margin-top 50px
      h1
         color #bbbbbb

.design-section
   background-image url(../img/freelance/sunset-bridge.jpg)
   background-size cover
   background-position top
   background-color #FFFFFF
   color white
   position relative
   .fade-animation
      background-color rgba(0, 0, 0, 0.7)
   h2
      margin-top 30px
   h4
      margin-top 30px
      margin-bottom 30px
   .animate3d
      position relative
      width 80%
      margin-left 10%
      padding-bottom 80%
      background-color rgba(255, 255, 255, 0.7)
      border-radius 50%
      margin-bottom 50px
      .layer
         position absolute
         top 10%
         width 60%
         height 81%
         left 20%
         background-color rgba(0,0,0,0.5)
      .layer-1
         position absolute
         top 10%
         left 10%
         width 80%
         height 80%
         background-color rgba(0,0,0,0.5)
      .layer-2
         position absolute
         top 20%
         left 15%
         width 70%
         height 70%
         overflow hidden
         text-align left
         z-index 500
   .discover-img
      position absolute
      top 12.5%
      left 12.5%
      width 75%
   .design-img
      position absolute
      top 9%
      left 20%
      width 60%
         
.services-section
   background-image url(../img/freelance/ocean-shores.jpg)
   background-size cover
   background-position top
   background-color #000000
   .fade-animation
      background-color rgba(255,255,255, 0.85)
   h2
      margin 30px 0 0 0
   h4
      margin-top 50px
   img 
      height 250px
      margin 30px 0 30px 0
.contact-section
   background-image url(../img/freelance/waves.jpg)
   background-size cover
   background-position center
   color white
   position relative
   .contact-box
      background-color rgba(0, 0, 0, 0.5)
      margin-top 100px
      margin-bottom 50px
   h2
      padding 50px 0 50px 0
   label
      color white
   input
      font-size 14px
   input, textarea
      background-color rgba(255,255,255, 0.5)
      color white
      &:focus
         color black
         border 1px solid black
         outline none
         box-shadow none
         background-color rgba(255,255,255, 0.8)
   .submit
      text-align right
      padding-bottom 15px
   button
      padding 12px
      background-color alpha(myBlue, 0.8)
      transition .15s
      &:hover 
         background-color darken(alpha(myBlue, 0.8), 20%)
//animations

@keyframes blink 
   0% 
      opacity 1
   100% 
      opacity .5
      
// 930 and under
@media screen and (max-width: 930px)
   pre 
      font-size 10px
   .contact-section
      h2
         padding-bottom 30px
      .contact-box
         margin-top 75px
// 640 and under
@media screen and (max-width: 640px)
   h1,h2
      font-size 40px
   h4
      font-size 30px
   pre 
      font-size 14px
   .banner-section
      .typed-span
         font-size 50px
      img:first-child
         top 10px
         left 10px
         width 100px
      .menu-container
         top 10px
         right 10px
      .menu-container p
         font-size 11px
      
   .contact-section
      h2
         padding-bottom 25px
      .contact-box
         margin-top 50px
         
@media screen and (max-width: 400px) // width 400 and under
   pre 
      font-size 10px
   .lead
      font-size 13px
      
@media screen and (min-height: 650px) // height 650 and larger
   .banner-section
      .typed-area
         margin-top 100px
         height 250px
         
@media screen and (min-height: 750px) // height 750 and larger
   .banner-section
      .typed-area
         margin-top 200px
         height 300px